<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FirstActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imgview_ic_user_login"
            android:layout_weight="3"
            android:src="@drawable/ic_user_login"
            android:scaleType="centerCrop"
            android:layout_width="match_parent"
            android:layout_height="0dp" />

        <View
            android:layout_weight="3"
            android:layout_width="match_parent"
            android:layout_height="0dp" />
    </LinearLayout>

    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_margin="?actionBarSize"
            android:textStyle="bold"
            android:textSize="40sp"
            android:textColor="#fff"
            android:text="@string/service_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="15dp"
            android:weightSum="2.0">

            <Button
                android:layout_marginTop="100dp"
                android:id="@+id/btnuser"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:text="@string/user_button"
                android:textColor="#000"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textAlignment="center"
                android:background="@drawable/rounded_corner_button" />

            <View
                android:layout_width="8.0dip"
                android:layout_height="1.0dip"
                android:background="#FF954CFB" />

            <Button
                android:layout_marginTop="100dp"
                android:id="@+id/btnowner"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:text="@string/owner_button"
                android:textColor="#000"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textAlignment="center"
                android:background="@drawable/rounded_corner_button" />

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>