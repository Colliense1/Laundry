<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.OwnerSignUp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imgview_ic_owner_signup"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_owner_login" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".9" />
    </LinearLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Owner Sign up"
                android:textColor="#fff"
                android:textSize="40sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_marginTop="12.0dip"
                    android:weightSum="2.0">

                    <EditText
                        android:id="@+id/editText_firstname"
                        android:layout_width="0dp"
                        android:layout_height="?actionBarSize"
                        android:layout_weight="1.0"
                        android:background="@drawable/owner_rounded_corner_edittext"
                        android:hint="First name"
                        android:textAlignment="center"
                        android:textColor="#000"
                        android:textColorHint="#232323" />

                    <View
                        android:layout_width="8.0dip"
                        android:layout_height="1.0dip"
                        android:background="#dc4ca1fb" />

                    <EditText
                        android:id="@+id/editText_lastname"
                        android:layout_width="0dp"
                        android:layout_height="?actionBarSize"
                        android:layout_marginLeft="3.0dip"
                        android:layout_weight="1.0"
                        android:background="@drawable/owner_rounded_corner_edittext"
                        android:hint="Last name"
                        android:textAlignment="center"
                        android:textColor="#000"
                        android:textColorHint="#232323" />

                </LinearLayout>


                <EditText
                    android:id="@+id/editTextPhoneNumber"
                    android:layout_width="match_parent"
                    android:layout_height="?actionBarSize"
                    android:layout_margin="10dp"
                    android:background="@drawable/owner_rounded_corner_edittext"
                    android:drawableLeft="@drawable/ic_phone_black_24dp"
                    android:drawablePadding="12.0dip"
                    android:hint="Phone Number"
                    android:inputType="number"
                    android:maxEms="11"
                    android:maxLines="1"
                    android:paddingStart="10dp"
                    android:paddingLeft="10dp"
                    android:textColor="#000"
                    android:textColorHint="#232323"
                    android:textSize="17sp" />

                <EditText
                    android:id="@+id/editTextEmail"
                    android:layout_width="match_parent"
                    android:layout_height="?actionBarSize"
                    android:layout_margin="10dp"
                    android:background="@drawable/owner_rounded_corner_edittext"
                    android:drawableLeft="@drawable/ic_email_black_24dp"
                    android:drawablePadding="12.0dip"
                    android:hint="Email"
                    android:inputType="textEmailAddress"
                    android:maxEms="10"
                    android:maxLines="1"
                    android:paddingStart="10dp"
                    android:paddingLeft="10dp"
                    android:textColor="#000"
                    android:textColorHint="#232323"
                    android:textSize="17sp" />

                <EditText
                    android:id="@+id/editTextAddress"
                    android:layout_width="match_parent"
                    android:layout_height="?actionBarSize"
                    android:layout_margin="10dp"
                    android:background="@drawable/owner_rounded_corner_edittext"
                    android:drawableLeft="@drawable/ic_add_location_black_24dp"
                    android:drawablePadding="12.0dip"
                    android:hint="Address"
                    android:inputType="text"
                    android:paddingStart="10dp"
                    android:paddingLeft="10dp"
                    android:textColor="#000"
                    android:textColorHint="#232323"
                    android:textSize="17sp" />

                <EditText
                    android:id="@+id/editTextPassword"
                    android:layout_width="match_parent"
                    android:layout_height="?actionBarSize"
                    android:layout_margin="10dp"
                    android:background="@drawable/owner_rounded_corner_edittext"
                    android:drawableLeft="@drawable/ic_lock_black_24dp"
                    android:drawablePadding="12.0dip"
                    android:hint="Password"
                    android:inputType="textPassword"
                    android:maxEms="10"
                    android:maxLines="1"
                    android:paddingStart="10dp"
                    android:paddingLeft="10dp"
                    android:textColor="#000"
                    android:textColorHint="#232323"
                    android:textSize="17sp" />

                <EditText
                    android:id="@+id/editTextConfirmPassword"
                    android:layout_width="match_parent"
                    android:layout_height="?actionBarSize"
                    android:layout_margin="10dp"
                    android:background="@drawable/owner_rounded_corner_edittext"
                    android:drawableLeft="@drawable/ic_lock_black_24dp"
                    android:drawablePadding="12.0dip"
                    android:hint="Confirm Password"
                    android:inputType="textPassword"
                    android:maxEms="10"
                    android:maxLines="1"
                    android:paddingStart="10dp"
                    android:paddingLeft="10dp"
                    android:textColor="#000"
                    android:textColorHint="#232323"
                    android:textSize="17sp" />

                <Button
                    android:id="@+id/button_signup"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_marginTop="10.0dip"
                    android:background="@drawable/user_rounded_corner_edittext"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:text="sign up"
                    android:textColor="#080808" />


            </LinearLayout>
        </LinearLayout>
    </ScrollView>


    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:progressDrawable="@drawable/circular_progress_view" />


</RelativeLayout>